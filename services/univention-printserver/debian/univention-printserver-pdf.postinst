. /usr/share/univention-lib/all.sh

dir='/var/spool/cups-pdf/%U'
anon_dir='/var/spool/cups-pdf/%U'

# set up directory
univention-config-registry set "cups/cups-pdf/directory?$dir"
univention-config-registry set "cups/cups-pdf/anonymous?$anon_dir"

#DEBHELPER#

# cups backend
if dpkg-statoverride --list /usr/lib/cups/backend/cups-pdf >/dev/null
then
	dpkg-statoverride --remove --force /usr/lib/cups/backend/cups-pdf
fi
chmod 0700 /usr/lib/cups/backend/cups-pdf

# reload listener
if [ "$1" = "configure" ]; then
	if test -f /etc/init.d/univention-directory-listener; then
		/etc/init.d/univention-directory-listener crestart
	fi

	univention-config-registry set \
		cups/cups-pdf/cleanup/enabled?no \
		cups/cups-pdf/cleanup/interval"?* * 1 * *" \
		cups/cups-pdf/cleanup/keep?30
fi

exit 0
