override_dh_auto_build:
	./dev/dh-umc-module-build --core
	dh_auto_build -- --executable=/usr/bin/python3

override_dh_auto_install:
	./dev/dh-umc-module-install --core
	dh_auto_install -- --install-scripts=$(destdir)/usr/sbin

override_dh_install:
	dh_install -X.svn
	install -p -m755 scripts/postrotate debian/univention-management-console-server/usr/share/univention-management-console/postrotate

%:
	dh $@ --with python2,python3,univention-l10n,ucr,univention-join
